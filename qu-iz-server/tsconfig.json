{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES6",
    "moduleResolution": "node",
    "sourceMap": false,
    "outDir": "dist",
    "baseUrl": "./src",
    "paths": {
      "@classes/*": ["classes/*"],
      "@decorators/*": ["decorators/*"],
      "@exceptions/*": ["exceptions/*"],
      "@filters/*": ["filters/*"],
      "@guards/*": ["guards/*"],
      "@modules/*": ["modules/*"],
      "@pipes/*": ["pipes/*"],
      "@providers/*": ["providers/*"],
      "@services/*": ["services/*"],
      "@utils/*": ["utils/*"],
      "@constants": ["constants.ts"]
    },
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "experimentalDecorators": true,
    "incremental": true,
    "resolveJsonModule": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
